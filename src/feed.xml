---
title : Atom Feed
permalink: /blog/feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ page.permalink }}</link>
    <author>
      <name>{{ site.author.name }}</name>
      <email>{{ site.author.email }}</email>
      <uri>{{ site.author.url }}</uri>
    </author>
    <rights type="text">Copyright Â© {{ site.time | date: "%Y" }} {{ site.author.name }}. All rights reserved.</rights>
    <atom:link href="{{ "/blog/feed.xml" | prepend: site.url }}" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% assign platform = page.title | downcase %}
    {% for post in site.posts limit:10 %}
        <item>
            <title>{{ post.title | xml_escape }}</title>
            <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
            <media:content xmlns:media="http://search.yahoo.com/mrss/" url="https://res.cloudinary.com/aim4strength/image/fetch/c_limit,f_auto,q_auto:best,w_640/{{ post.image }}" medium="image"></media:content>
            <description>{{ post.content | xml_escape }}</description>
            <link>{{ post.url | prepend: site.url | append: '@' | remove: '/@'}}?utm_source=RSS&amp;utm_medium=RSS&amp;utm_campaign={{ post.title | replace: ',','' | replace: ' ', '' | xml_escape }}</link>
            <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
            {% for tag in post.tags %}
            <category>{{ tag | xml_escape }}</category>
            {% endfor %}
            {% for cat in post.categories %}
            <category>{{ cat | xml_escape }}</category>
            {% endfor %}
        </item>
    {% endfor %}
</feed>
